const DEFAULT_PORT = 8888;

let options = {};

process.argv.forEach(val => {
  if (!(/^--[a-z-]{0,16}=[a-z0-9-._]{0,64}$/i.test(val))) {
    return;
  }
  let kvPair = val.substr(2).split(/\=/);
  options[kvPair[0]] = kvPair[1];
});

require("../")(options.port || DEFAULT_PORT, true);
